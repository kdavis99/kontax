<%= form_for([@job, @contact]) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<table>
  	<tr>
			<td>
	 		  <div class="field">
			    <%= f.text_field :name, placeholder: "Name" %>
			  </div>
 			</td>
  	  <td>
			  <div class="field">
			    <%= f.text_field :company, placeholder: "Company"%>
			  </div>
			</td>
  	</tr>
  	<tr>
			<td>
  			<div class="field">
    			<%= f.text_field :email, placeholder: "person@company.com"%>
		 	  </div>
			</td>
			<td>
			  <div class="field">
			    <%= f.text_field :phone, placeholder: "Phone Number" %>
			  </div>
			</td>
  	</tr>
  	<tr>
			<td colspan="2">
  			<div class="field">
			    <%= f.text_field :position, placeholder: "Position"%>
			  </div>
			</td>
  	</tr>
  	<tr>
			<td colspan="2">
			  <div class="field">
		      <%= f.text_field :note, placeholder: "Any other notes" %>
			  </div>
			</td>
  	</tr>
  </table>

  <div class="field">
    <!-- %= f.label :event_id %> -->
    <!-- %= f.text_field :event_id %> -->
  </div>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :job_id, :value => @job.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
