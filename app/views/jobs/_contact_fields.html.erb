<div class='nested-fields'>

  <%= f.inputs do %>
  <div class="field">
    <%= f.input :name %>
  </div>

  <div class="field">
    <%= f.input :email %>
  </div>

  <div class="field">
    <%= f.input :phone %>
  </div>

  <div class="field">
    <%= f.input :company %>
  </div>

  <div class="field">
    <%= f.input :position %>
  </div>

  <h4> contacts jobs </h4>
  <div class="field">
    <%= f.input :note %>
  </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= link_to_remove_association "remove contact", f %>

  <% end %>
</div>
