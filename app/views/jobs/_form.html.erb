<%= semantic_form_for @job do |f| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company %>
    <%= f.text_field :company %>
  </div>

  <div class="field">
    <%= f.label :position %>
    <%= f.text_field :position %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :app_link %>
    <%= f.text_field :app_link %>
  </div>

  <div class="field">
    <%= f.label :date_applied %>
    <%= f.date_select :date_applied %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.number_field :status %>
  </div>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_field :note %>
  </div>

  <!-- <div class="field"> -->
  <!-- </div>-->

  <!-- contacts -->
  <h3> Contacts </h3>
  <div id='contacts'>
    <%= f.semantic_fields_for :contacts do |contact| %>
      <%= render 'contact_fields', f: contact %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add contact', f, :contacts %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
