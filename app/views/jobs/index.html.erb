						   var markers = handler.addMarkers([
						         <% @my_events.each do |event| %>
						            { lat: <%= event.latitude%>, lng: <%= event.longitude%>},
						         <% end %>
						   ]);
						   handler.bounds.extendWith(markers);
						   handler.fitMapToBounds();
