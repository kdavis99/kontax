<html>
   <head>
      <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Oswald|Playfair+Display" rel="stylesheet">
      <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
      <meta name="viewport" content="width=device-width, initial-scale=1">
   </head>

   <div id="entire_page">
      <body>
         <p id="notice"><%= notice %></p>

         <!-- updates the most recent date to be the last update that was added. -->
         <% @ordered_jobs = Job.all %>
         <% @ordered_jobs.each do |job| %>
            <% if job.updates.size > 0 %>
               <% job.most_recent_date = job.updates[job.updates.size - 1].u_date %>
            <% end %>
         <% end %>

         <!-- sorts jobs by most recent date -->
         <% @ordered_jobs.each do |job| %>
            <% @ordered_jobs = @ordered_jobs.sort_by { |a| a.most_recent_date } %>
         <% end %>

         <div class="w3-row-padding">
            <div class="w3-twothird">
               <% @ordered_jobs.each do |job| %>
                  <div class="w3-third">
                     <% if job.status == 1 %> 
                        <div id="applied_job_div">
                           <div id="h_job_company"><%= job.company %></div>
                           <div id="h_position"><%= job.position %></div>
                           <div id="h_job_date">
                              <%= job.most_recent_date.strftime('%b %d, %Y') %>
                           </div>
                        </div>
                     <% end %>
                     <% if job.status == 2 %> 
                        <div id="contact_job_div">
                           <div id="h_job_company"><%= job.company %></div>
                           <div id="h_position"><%= job.position %></div>
                           <div id="h_job_date">
                              <%= job.most_recent_date.strftime('%b %d, %Y') %>
                           </div>
                        </div>
                     <% end %>
                     <% if job.status == 3 %> 
                        <div id="interview_job_div">
                           <div id="h_job_company"><%= job.company %></div>
                           <div id="h_position"><%= job.position %></div>
                           <div id="h_job_date">
                              <%= job.most_recent_date.strftime('%b %d, %Y') %>
                           </div>
                        </div>
                     <% end %>
                     <% if job.status == 4 %> 
                        <div id="offer_job_div">
                           <div id="h_job_company"><%= job.company %></div>
                           <div id="h_position"><%= job.position %></div>
                           <div id="h_job_date">
                              <%= job.most_recent_date.strftime('%b %d, %Y') %>
                           </div>
                        </div>
                     <% end %>
                     <% if job.status == 5 %> 
                        <div id="didnt_get_job_div">
                           <div id="h_job_company"><%= job.company %></div>
                           <div id="h_position"><%= job.position %></div>
                           <div id="h_job_date">
                              <%= job.most_recent_date.strftime('%b %d, %Y') %>
                           </div>
                        </div>
                     <% end %>
                  </div>
               <% end %>
            </div>
            <div class="w3-third">
               <div id="test_box">yayayaya</div>
            </div>
         </div>
         <table>
            <thead>
               <tr>
                  <th>Company</th>
                  <th>Position</th>
                  <th>Location</th>
                  <th>Description</th>
                  <th>App link</th>
                  <th>Date applied</th>
                  <th>Recent Date</th>
                  <th>Status</th>
                  <th>Note</th>
                  <th>User</th>
                  <th colspan="3"></th>
               </tr>
            </thead>


            <tbody>
               <% @ordered_jobs.each do |job| %>
                  <tr>
                     <td><%= job.company %></td>
                     <td><%= job.position %></td>
                     <td><%= job.location %></td>
                     <td><%= job.description %></td>
                     <td><%= job.app_link %></td>
                     <td><%= job.date_applied %></td>
                     <td><%= job.most_recent_date %></td>
                     <td><%= job.status %></td>
                     <td><%= job.note %></td>
                     <td><%= job.user.email %></td>
                     <td><%= link_to 'Show', job %></td>
                     <td><%= link_to 'Edit', edit_job_path(job) %></td>
                     <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
               <% end %>
            </tbody>
         </table>

         <br>

         <%= link_to 'New Job', new_job_path %>
      </body>
   </div>
</html>
