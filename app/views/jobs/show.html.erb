<html>
   <head>
      <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Oswald|Playfair+Display" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Barrio" rel="stylesheet">
      <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
      <meta name="viewport" content="width=device-width, initial-scale=1">
   </head>
   <div id="entire_page">
      <body>
         <div class="w3-row-padding">
            <div class="w3-twothird">
               <div id="s_status">
                  <%= @job.status %>
               </div>

               <div id="job_title_box">
                  <div id="s_job_company">
                     <%= @job.company %>
                  </div>

                  <div id="s_subtitles">
                     <strong>Position:</strong>
                     <%= @job.position %>

                     <strong>Location:</strong>
                     <%= @job.location %>
                     <br><br>
                  </div>

                  <div id="s_subs">
                     <strong>App link:</strong>
                     <%= @job.app_link %>

                     <strong>Date applied:</strong>
                     <%= @job.date_applied %>
                     <br><br>

                     <strong>Description:</strong>
                     <%= @job.description %>
                     <br><br>

                     <strong>Note:</strong>
                     <%= @job.note %>
                  </div>
               </div>
            </div>
            <div class="w3-third">
               <% for contact in @job.contacts %>
                  <% if contact != nil and !contact.name.blank? %>
                     <div id="contact_person_div">
                        <div id="h_job_contact"><%= contact.name %></div>
                        <div id="h_position"><%= contact.position %></div>
                        <div id="h_contact"><%= contact.email + " || " + contact.phone %></div>
                     </div>
                  <% end %>
               <% end %>
               <div id="heading1">Updates:</div>
               <div id="updates_box">
                  <% @job.updates.reverse_each do |update| %>
                     <% if !update.note.blank? %>
                        <div id="h_update_title"><%= update.u_date.strftime('%A, %B %d, %Y')%></div>
                        <blockquote><div id="update_note"> â€” <%= update.note %></div></blockquote>
                     <% end %>
                  <% end %>
                  </p>
               </div>
            </div>
            <button type="button" id="modal_buttons" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addContactModal">New Contact</button>
            <!-- Add Job Modal -->
            <div class="modal fade" id="addContactModal" role="dialog">
               <div class="modal-dialog">
                  <!-- Modal content-->
                  <div class="modal-content">
                     <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Enter contact details</h4>
                     </div>
                     <div class="modal-body">
                        <p><%= render 'contacts/form' %></p>
                     </div>
                     <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                     </div>
                  </div>

               </div>
            </div>
            <button type="button" id="modal_buttons" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addUpdateModal">New Update</button>
            <!-- Add Job Modal -->
            <div class="modal fade" id="addUpdateModal" role="dialog">
               <div class="modal-dialog">
                  <!-- Modal content-->
                  <div class="modal-content">
                     <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Enter update details</h4>
                     </div>
                     <div class="modal-body">
                        <p><%= render 'updates/form' %></p>
                     </div>
                     <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                     </div>
                  </div>

               </div>
            </div>
         </div>


      </body>
   </div>
</html>
